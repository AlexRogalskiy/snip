{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "removeComments": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2017"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "lib/**/*"]
}
